Algoritmo Ejercicio_4_Pago_de_su_Compra
	Escribir "Tienda ofrece descuento del 15% sobre su compra";
	Escribir "-----------------------------------------------"
	Descuento<-0.15;
	Escribir "Ingrese su total compra";
	Leer TotalCompra;
	TotalPagar<-(TotalCompra-Descuento);
	Escribir "-----------------------------------------------"
	Escribir "Total pagar con descuento:  ", TotalPagar;

FinAlgoritmo
